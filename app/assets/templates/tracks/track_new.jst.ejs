  <div class="errors">

  </div>

<div class="row">
  <form
    class="new_track col-xs-4 col-xs-offset-4"
    id="new_track"
    enctype="multipart/form-data"
    action="/api/tracks"
    accept-charset="UTF-8"
    data-remote="true"
    method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <label for="track_audio">Title*</label>
    <input type="text" name="track[title]">
    <input type="hidden" name="track[user_id]" value="<%= currentUser.get("id") %>">
    <input type="file" name="track[audio]" id="track_audio">
    <input id="create-track" type="submit" name="commit" value="upload">
  </form>

  <div id="progress" class="col-xs-4 col-xs-offset-4">
      <div class="bar"></div>
  </div>
  <p id="progress-message" class="col-xs-4 col-xs-offset-4">
  </p>
  <script charset="utf-8">

  $('#new_track').fileupload({
    url: '/api/tracks',
    replaceFileInput: false,
    progress: function (e, data) {
      var progress = parseInt(data.loaded / data.total * 100, 10);
      $('#progress').css('display', "block");
      $('#progress .bar').css('width', progress + '%');
    },

    add: function (e, data) {
      $('#create-track').click(function () {
        $('#progress-message').text('Uploading...');
        $('#create-track').css("display", "none");
        data.submit();
      });
    },

    done: function (e, data) {
      $("input[type='text']").val("");
      $('#create-track').css("display", "none");
      $('#progress-message').text('Upload finished.');
    },

    fail: function (e, data) {
      $('#progress .bar').css('background', 'red');
      $.each(data.jqXHR.responseJSON, function (key, val){
        $(".errors").addClass("alert alert-danger").text(val);
      });

    }
  });

  </script>
</div>
