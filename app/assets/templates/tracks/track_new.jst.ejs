  <h3 id="upload-header">Upload a sound</h3>
    <div style="display: none;" class="alert alert-danger alert-dismissible">
      <p class="title-error"> </p>
      <p class="file-error"> </p>
    </div>

    <div class="file-type-error alert alert-danger alert-dismissible">
      Please upload mp3, wav, aac, or ogg file formats
    </div>

  <div>


  <form
      id="new-track"
      class="clearfix"
      enctype="multipart/form-data"
      action="/api/tracks"
      accept-charset="UTF-8"
      method="post">
      <input type="hidden" name="authenticity_token" value="<%= AUTH_TOKEN %>">
      <input type="hidden" name="track[user_id]" value="<%= user.get("id") %>">
      <input name="utf8" type="hidden" value="âœ“">
