
<a href="/#user/<%= comment.get("user_id")%>" class="avatar-link">
  <img class="comment-avatar" src="<%= comment.get("avatar_mini") %>" alt="" />
</a>
<div class="comment-wrapper">
  <span class="comment-time-ago"> <%= comment.get("time_ago") %></span>
  <a href="/#user/<%= comment.get("user_id")%>" class="comment-username">
    <%= comment.get("user") %>
  </a>
  <div class="content"> <%= comment.get("content") %> </div>
</div>
