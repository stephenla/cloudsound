<%= javascript_tag "Cloudsound.welcome = '#{welcome_image}';" %>

<% if flash.now[:errors] %>
<div class="notice slideLeft">
<% flash.now[:errors].each do |msg| %>
  <%= msg %>
<% end %>
</div>
<% end %>

<div class="welcome">
  <h1 class="welcome-header">Listen to the best sounds from around the world</h1>
  <p class="welcome-body small">
    CloudSound is a social music sharing application based on the popular <a style="color: #f50;" href="http://www.soundcloud.com"><u>soundcloud.com</u></a>.
  </p>
  <p class="welcome-body center">
    Take a tour by clicking on the link below!
  </p>
  <form class="guest-login" action="/session/guest" method="post">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">
  <input class="guest-login" type="submit" name="name" value="Take a tour">
  </form>
</div>






<script charset="utf-8">
$(function () {

  $("body").css("background", "url('" + Cloudsound.welcome + "') center no-repeat");
  $("#content").css("background", "none");
});
</script>
